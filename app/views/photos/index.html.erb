<div>
  <div>
    <h1>
      List of all photos
    </h1>
  </div>
</div>

<hr>

    <form action="/insert_photo" method="post" enctype="multipart/form-data">
      <div>

        <label for="image_box">
          Image
        </label>

        <input type="file" id="image_box" name="query_image" class="form-control">

        <label for="caption_box">
          Caption
        </label>

        <input type="text" id="caption_box" name="query_caption" placeholder="Enter a caption for the photo...">      

      <button>
        Add photo
      </button>
      </div>
    </form>

<hr>
<div>
  <div>
    <table border = 1>
      <tr>

        <th>
          Image
        </th>

        <th>
          Caption
        </th>


        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Likes count
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <tr>

        <td>
          <img src =<%= a_photo.image %>>
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.owner.username %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %> ago
        </td>        

        <td>
          <%= a_photo.likes_count %>
        </td>
        
        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
